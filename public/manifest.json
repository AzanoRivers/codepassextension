{
    "manifest_version": 3,
    "name": "CodePass",
    "version": "1.0",
    "description": "Simple and modern password management",
    "permissions": [
        "storage",
        "identity"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "img/16codelabssvglogoblue.png",
            "32": "img/32codelabssvglogoblue.png",
            "48": "img/48codelabssvglogoblue.png",
            "128": "img/128codelabssvglogoblue.png"
        }
    },
    "icons": {
        "16": "img/16codelabssvglogoblue.png",
        "32": "img/32codelabssvglogoblue.png",
        "48": "img/48codelabssvglogoblue.png",
        "128": "img/128codelabssvglogoblue.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}