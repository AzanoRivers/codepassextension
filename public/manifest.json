{
    "manifest_version": 3,
    "name": "CodePass",
    "version": "1.0",
    "description": "Secure password manager with Google Drive sync. Store and manage your passwords safely with encryption and automatic cloud backup.",
    "homepage_url": "https://github.com/azanoRivers/codepass-extension",
    "permissions": [
        "storage",
        "identity"
    ],
    "host_permissions": [
        "https://accounts.google.com/*",
        "https://www.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "img/16codelabssvglogoblue.png",
            "32": "img/32codelabssvglogoblue.png",
            "48": "img/48codelabssvglogoblue.png",
            "128": "img/128codelabssvglogoblue.png"
        }
    },
    "icons": {
        "16": "img/16codelabssvglogoblue.png",
        "32": "img/32codelabssvglogoblue.png",
        "48": "img/48codelabssvglogoblue.png",
        "128": "img/128codelabssvglogoblue.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "oauth2": {
        "client_id": "506593573242-haain28m31kl2hs8n20s1nqg8vk91oc2.apps.googleusercontent.com",
        "scopes": [
            "openid",
            "email",
            "profile",
            "https://www.googleapis.com/auth/drive"
        ]
    }
}